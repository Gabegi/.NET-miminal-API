{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Cors": {
    "PolicyName": "AllowSpecificOrigins",
    "AllowedOrigins": [],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "ExposedHeaders": ["*"],
    "AllowCredentials": true,
    "MaxAge": 3600
  },
  "JwtSettings": {
    "Secret": "",
    "Issuer": "MinimalAPI",
    "Audience": "MinimalAPIClients",
    "ExpiryMinutes": 60
  },
  "CacheSettings": {
    "Enabled": true,
    "RedisConnectionString": null,
    "L1ToL2Ratio": 0.5,
    "EnableLogging": true,
    "TargetHitRatePercent": 80,
    "MaxPayloadBytes": 1048576,
    "MaxKeyLength": 256,
    "SerializationFormat": "Json",
    "CacheVersion": "v1",
    "RedisFailureThreshold": 5,
    "CircuitBreakerTimeoutSeconds": 30,
    "RedisTimeoutMs": 5000,
    "StampedeLockTimeoutMs": 10000,
    "Ttl": {
      "ProductsListMinutes": 5,
      "ProductsItemMinutes": 60,
      "CustomersListMinutes": 5,
      "CustomersItemMinutes": 60,
      "OrdersListMinutes": 5,
      "OrdersItemMinutes": 10,
      "OrdersByCustomerMinutes": 10
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*"
}
